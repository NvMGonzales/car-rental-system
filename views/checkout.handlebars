<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
                <img src="{{car.logo}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{car.make}} {{car.model}}</h5>
                    <p class="card-text">{{car.monthlyprice}}/month</p>
                    <p class="card-text">{{car.weeklyprice}}/week</p>
                    <a href="/displayCar/{{car._id}}" class="btn btn-primary">Contact Owner</a>
                </div>
                </div>
        </div>
        <div class="col-sm-4">
            <form action="/chargeClient/{{budget._id}}" method="POST">
            <script src="https://checkout.stripe.com/checkout.js" 
            data-key="{{StripePublishableKey}}" 
            class="stripe-button" 
            data-amount="{{stripeTotal}}"
            data-name="Rent Your Auto" 
            data-description="Php{{budget.total}}" for renting a {{car.make}} {{car.model}}
            data-image="/images/car-logo2.png"></script>
            <div class="form-group">
                <label for="month">Total is Php{{budget.total}}</label>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-danger">Pay Now</button>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>